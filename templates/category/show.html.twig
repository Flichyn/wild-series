{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} | {{ 'category.category'|trans }} {{ category.name }}{% endblock %}
{% block body %}
    <h1>{{ category.name }}</h1>

    {% for program in programs %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h2 class="mt-0">{{ program.id }}/ {{ program.title }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path('program_show', { slug : program.slug }) }}">{{ 'program.show'|trans }}</a>
        </div>
    </div>
    {% else %}
        {{ 'category.noProgramsFound'|trans }}
    {% endfor %}

    <a href="{{ path('program_index') }}">{{ 'back.programList'|trans }}</a>
{% endblock %}
